{
  "compilerOptions": {
    "rootDir": "src",            // Fixes rollup bug: https://github.com/rollup/plugins/issues/287#issuecomment-606052505
    "outDir": "dist",            // Output files to the dist directory -- duplicated from rollup config for source maps
    "sourceMap": true,           // Automatically generate source map files
    "declaration": true,         // Automatically generate .d.ts files
    "target": "es6",             // Compile files into an es6 format
    "moduleResolution": "node",  // Search under node_modules for non-relative imports
    "esModuleInterop": true      // Import non-ES modules as default imports
  },
  "include": ["src"], // Only compile files in the src/ directory
}
